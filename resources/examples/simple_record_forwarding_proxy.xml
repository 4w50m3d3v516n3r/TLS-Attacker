<workflowTrace>
    <OutboundConnection>
        <alias>mitm2server</alias>
        <port>4488</port>
        <hostname>localhost</hostname>
        <timeout>100</timeout>
    </OutboundConnection>
    <InboundConnection>
        <alias>client2mitm</alias>
        <port>2222</port>
        <timeout>100</timeout>
    </InboundConnection>
<!-- CH-->
<ForwardRecordsAction>
  <receiveFromAlias>client2mitm</receiveFromAlias>
  <forwardToAlias>mitm2server</forwardToAlias>
</ForwardRecordsAction>
